{
  "name": "midgard",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "clean-css": "^3.3.8",
    "exorcist": "^0.4.0",
    "flux": "^2.0.3",
    "isomorphic-fetch": "^2.1.1",
    "nodemon": "^1.8.1",
    "normalize.css": "^3.0.3",
    "object-assign": "^4.0.1",
    "react": "^0.13.3",
    "react-favicon": "0.0.3",
    "react-router": "^1.0.0",
    "uglifyjs": "^2.4.10",
    "ungrid": "^1.0.1",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "octicons": "^3.1.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-js-debug": "browserify js/midgard.jsx --debug | exorcist js/midgard.js.map > js/midgard.js",
    "build-js": "browserify js/midgard.jsx | uglifyjs - -c warnings=false -m > js/midgard.min.js",
    "watch-js": "watchify js/midgard.jsx --verbose --ignore-watch=\"**/node_modules/**\" --ignore-watch=\"**/js/midgard.min.js\" -o 'uglifyjs - -c warnings=false -m > js/midgard.min.js'",
    "build-css": "cleancss -o ./css/midgard.min.css ./css/midgard.css",
    "watch-css": "nodemon --watch css/midgard.css --exec 'npm run build-css'",
    "build": "npm run build-css && npm run build-js",
    "watch": "npm run watch-css & npm run watch-js"
  }
}
